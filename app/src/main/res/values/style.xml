<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="gradient_bg_style">
        <item name="android:background">@drawable/bg_gradient_shape</item>
    </style>
    <style name="tv_header_style" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="tv_click_style" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">true</item>
        <item name="android:background">@drawable/tv_click_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="tv_win_style" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">true</item>
        <item name="android:background">@drawable/tv_click_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="pb_circular_splash_screen_style" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/pb_circular_shape</item>
        <item name="android:animationResolution">@integer/material_motion_duration_long_1</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>


</resources>